<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myCart_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/unbounded_reg"
                android:text="My Cart"
                android:textColor="#3D405B"
                android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="60dp"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/order_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/unbounded_reg"
                        android:text="Order"
                        android:textColor="#3D405B"
                        android:layout_weight="2"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/clear_all_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/unbounded_light"
                        android:text="Clear all"
                        android:textColor="#F28482"
                        android:layout_weight="1"
                        android:textSize="20sp" />

                </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/dont_forget_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/unbounded_reg"
                android:text="Don't Forget"
                android:textColor="#3D405B"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$85.18"
                android:fontFamily="@font/unbounded_bold"
                android:textSize="20sp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="35dp" />


             <com.google.android.material.button.MaterialButton
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Next Step"
                 android:textAllCaps="false"
                 android:backgroundTint="#F28482"
                 android:padding="20dp"
                 android:layout_marginTop="30dp"
                 android:fontFamily="@font/unbounded_reg"
                 android:textSize="15sp"
                 app:cornerRadius="10dp" />







        </LinearLayout>





    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>